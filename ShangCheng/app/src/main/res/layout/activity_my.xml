<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewjiemian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:drawableTop="@drawable/shouye"
                android:button="@null"
                android:id="@+id/shouye"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                android:text="首页"/>
            <RadioButton
                android:drawableTop="@drawable/weitao"
                android:button="@null"
                android:id="@+id/weitao"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="微淘"/>
            <RadioButton
                android:drawableTop="@drawable/gouwuche"
                android:button="@null"
                android:id="@+id/gouwuche"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="购物车"/>
            <RadioButton
                android:drawableTop="@drawable/wode"
                android:button="@null"
                android:gravity="center"
                android:id="@+id/wode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="我的淘宝"/>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
